generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  REGULAR
}

enum Gender {
  MALE
  FEMALE
}

model User {
  id          Int        @id @default(autoincrement())
  username    String     @unique
  password    String
  userType    String     @default("REGULAR")
  gender      String
  firstname   String
  lastname    String
  phoneNumber String     @unique
  schedules   Schedule[]
}

model Schedule {
  id          Int    @id @default(autoincrement())
  status      String @default("accepted")
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
  therapyType String
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.MediumText
  expiresAt DateTime
}
